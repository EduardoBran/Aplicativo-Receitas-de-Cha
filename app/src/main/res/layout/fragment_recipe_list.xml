<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recipeListRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    tools:context=".ui.recipes.RecipeListFragment">

    <!-- Título dinâmico (nome da categoria) -->
    <TextView
        android:id="@+id/textRecipesTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:textAlignment="center"
        android:textAppearance="?attr/textAppearanceHeadline6"
        android:textColor="@color/colorOnBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Chás Calmantes e Antiestresse" />

    <!-- Lista de receitas -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewRecipes"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingTop="8dp"
        android:paddingBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textRecipesTitle"
        tools:listitem="@layout/item_recipe" />

    <!-- Estado vazio -->
    <TextView
        android:id="@+id/textRecipesEmptyState"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:gravity="center"
        android:text="@string/recipes_list_empty_state"
        android:textAppearance="?attr/textAppearanceBody1"
        android:textColor="@color/colorOnBackground"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Overlay de loading com Lottie + texto centralizado -->
    <LinearLayout
        android:id="@+id/recipeListLoadingOverlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/app_background"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieRecipeList"
            android:layout_width="260dp"
            android:layout_height="260dp"
            android:contentDescription="@null"
            android:importantForAccessibility="no"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/lottie_cup_of_tea"
            app:lottie_renderMode="software"
            app:lottie_speed="1.0" />

        <TextView
            android:id="@+id/textRecipesLoading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/recipes_list_loading_message"
            android:textAppearance="?attr/textAppearanceBody1"
            android:textColor="@color/colorOnBackground"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>