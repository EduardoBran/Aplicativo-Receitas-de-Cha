<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/favorites_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    tools:context=".ui.favorites.FavoritesFragment">

    <!-- Título da tela -->
    <TextView
        android:id="@+id/textFavoritesTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/favorites_title"
        android:textAlignment="center"
        android:textAppearance="?attr/textAppearanceHeadline5"
        android:textColor="@color/colorOnBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Lista de favoritos -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewFavorites"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="16dp"
        android:clipToPadding="false"
        android:paddingHorizontal="16dp"
        android:paddingBottom="8dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textFavoritesTitle"
        tools:listitem="@layout/item_favorite" />

    <!-- Ícone suave para estado vazio -->
    <ImageView
        android:id="@+id/imageFavoritesEmptyIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="8dp"
        android:alpha="0.85"
        android:contentDescription="@string/favorites_cont_empty"
        android:src="@drawable/ic_recipe_favorite_empty"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/textFavoritesEmptyState"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textFavoritesTitle"
        app:layout_constraintVertical_chainStyle="packed"
        app:tint="@color/text_secondary" />

    <!-- Estado vazio: sem receitas favoritas -->
    <TextView
        android:id="@+id/textFavoritesEmptyState"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:gravity="center"
        android:text="@string/favorites_empty_state"
        android:textAppearance="?attr/textAppearanceBody1"
        android:textColor="@color/text_secondary"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageFavoritesEmptyIcon" />

    <!-- Overlay de loading com Lottie + texto centralizado -->
    <LinearLayout
        android:id="@+id/favoritesLoadingOverlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/app_background"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieFavorites"
            android:layout_width="260dp"
            android:layout_height="260dp"
            android:contentDescription="@null"
            android:importantForAccessibility="no"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/lottie_cup_of_tea"
            app:lottie_renderMode="software"
            app:lottie_speed="1.0" />

        <TextView
            android:id="@+id/textFavoritesLoading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/favorites_loading_message"
            android:textAppearance="?attr/textAppearanceBody1"
            android:textColor="@color/colorOnBackground"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>