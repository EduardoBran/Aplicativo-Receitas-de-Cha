<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recipeDetailRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:fitsSystemWindows="false"
    tools:context=".ui.recipes.RecipeDetailFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:fitsSystemWindows="false"
        android:visibility="invisible"
        app:elevation="0dp"
        tools:visibility="visible">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentScrim="@color/color_primary_base"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
            app:statusBarScrim="@color/color_primary_base"
            app:titleEnabled="false">

            <View
                android:id="@+id/viewHeroHeader"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/bg_recipe_detail_hero"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.5" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutExpandedContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="?attr/actionBarSize"
                android:paddingHorizontal="18dp"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.7">

                <TextView
                    android:id="@+id/textRecipeTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="14dp"
                    android:textAppearance="?attr/textAppearanceHeadline5"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toStartOf="@id/imageHeroIcon"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Chá Abdômen Leve" />

                <TextView
                    android:id="@+id/textRecipeSubtitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="14dp"
                    android:alpha="0.9"
                    android:textAppearance="?attr/textAppearanceSubtitle1"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toStartOf="@id/imageHeroIcon"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textRecipeTitle"
                    tools:text="Barriga Leve e Menos Inchaço" />

                <ImageView
                    android:id="@+id/imageHeroIcon"
                    android:layout_width="@dimen/recipeDetail_hero_icon_size"
                    android:layout_height="@dimen/recipeDetail_hero_icon_size"
                    android:alpha="0.2"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_tea_48"
                    app:layout_constraintBottom_toBottomOf="@id/textRecipeSubtitle"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/textRecipeTitle"
                    app:tint="@color/white" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:contentInsetStart="0dp"
                app:layout_collapseMode="pin"
                app:navigationIcon="@drawable/ic_arrow_left_28"
                app:navigationIconTint="@color/color_on_primary_base"
                app:titleTextColor="@color/color_on_primary_base"
                tools:title="Chá Abdômen Leve" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollRecipeContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:fillViewport="true"
        android:visibility="invisible"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:visibility="visible">

        <LinearLayout
            android:id="@+id/contentLinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/recipeDetail_content_paddingHorizontal"
            android:paddingBottom="24dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardIntro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:cardBackgroundColor="@color/surface_card_background"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/textIntroHeader"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="12dp"
                        android:gravity="center_vertical"
                        android:text="@string/recipe_detail_section_intro"
                        android:textAllCaps="true"
                        android:textAppearance="?attr/textAppearanceSubtitle2"
                        android:textColor="@color/color_primary_base"
                        android:textStyle="bold"
                        app:drawableStartCompat="@drawable/ic_tea_24"
                        app:drawableTint="@color/detail_section_icon_tint" />

                    <TextView
                        android:id="@+id/textShortDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:lineSpacingExtra="4sp"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textColor="@color/colorOnSurface"
                        tools:text="Um chá amargo e fresco, usado tradicionalmente após refeições mais pesadas." />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardBenefits"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@color/bg_card_benefits"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/color_primary_light"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="12dp"
                        android:gravity="center_vertical"
                        android:text="@string/recipe_detail_section_benefits"
                        android:textAllCaps="true"
                        android:textAppearance="?attr/textAppearanceSubtitle2"
                        android:textColor="@color/color_primary_base"
                        android:textStyle="bold"
                        app:drawableStartCompat="@drawable/ic_spa_24"
                        app:drawableTint="@color/detail_section_icon_tint" />

                    <TextView
                        android:id="@+id/textRecipeBeneficios"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:lineSpacingExtra="4sp"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textColor="@color/colorOnSurface"
                        tools:text="Pode ajudar na hidratação e no conforto digestivo após refeições, além de ser uma alternativa leve a bebidas calóricas. O efeito desinchante do boldo contribui para a sensação de abdômen mais plano." />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardIngredients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@color/surface_card_background"
                app:cardCornerRadius="16dp"
                app:cardElevation="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="12dp"
                        android:gravity="center_vertical"
                        android:text="@string/recipe_detail_section_ingredients"
                        android:textAllCaps="true"
                        android:textAppearance="?attr/textAppearanceSubtitle2"
                        android:textColor="@color/color_primary_base"
                        android:textStyle="bold"
                        app:drawableStartCompat="@drawable/ic_receipt_long_24"
                        app:drawableTint="@color/detail_section_icon_tint" />

                    <TextView
                        android:id="@+id/textRecipeIngredientes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:lineSpacingExtra="4sp"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textColor="@color/colorOnSurface"
                        tools:text="• 1 colher de sopa de hortelã (fresca ou seca)\n• 1 colher de sopa de boldo-do-chile (peumus boldus) seco (ou 1 sachê)\n• 300 ml de água quente" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardPrep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@color/surface_card_background"
                app:cardCornerRadius="16dp"
                app:cardElevation="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="12dp"
                        android:gravity="center_vertical"
                        android:text="@string/recipe_detail_section_preparation"
                        android:textAllCaps="true"
                        android:textAppearance="?attr/textAppearanceSubtitle2"
                        android:textColor="@color/color_primary_base"
                        android:textStyle="bold"
                        app:drawableStartCompat="@drawable/ic_timer_24"
                        app:drawableTint="@color/detail_section_icon_tint" />

                    <TextView
                        android:id="@+id/textRecipeModoPreparo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:lineSpacingExtra="4sp"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textColor="@color/colorOnSurface"
                        tools:text="1. Desligue o fogo antes de ferver forte.\n2. Adicione as ervas e abafe por 5 a 7 minutos (não prolongue muito para não amargar).\n3. Coe e beba morno." />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardNotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@color/bg_card_warning"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="12dp"
                        android:gravity="center_vertical"
                        android:text="@string/recipe_detail_section_notes"
                        android:textAllCaps="true"
                        android:textAppearance="?attr/textAppearanceSubtitle2"
                        android:textColor="@color/color_warning_accent"
                        android:textStyle="bold"
                        app:drawableStartCompat="@drawable/ic_info_24"
                        app:drawableTint="@color/color_warning_accent" />

                    <TextView
                        android:id="@+id/textRecipeObservacoes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:lineSpacingExtra="4sp"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textColor="@color/colorOnSurface"
                        tools:text="Uso adulto. Boldo é amargo e deve ser usado por períodos curtos. Não é recomendado para gestantes, lactantes, crianças e pessoas com problemas hepáticos graves, obstrução biliar ou uso de muidos medicamentos sem orientação profissional. Se causar mal-estar, supenda." />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabFavorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:backgroundTint="@color/white"
        android:contentDescription="@string/cd_favorite_add"
        android:src="@drawable/ic_favorite_border_24"
        android:visibility="invisible"
        app:borderWidth="0dp"
        app:elevation="6dp"
        app:layout_behavior="com.luizeduardobrandao.appreceitascha.ui.recipes.FabScrollBehavior"
        app:tint="@color/color_primary_base"
        tools:visibility="visible" />

    <ProgressBar
        android:id="@+id/progressBarRecipeDetail"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:visibility="visible"
        tools:visibility="invisible" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>