<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    tools:context=".ui.home.HomeFragment">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/homeContentScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:fillViewport="true"
        android:paddingBottom="80dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">

            <ImageView
                android:id="@+id/ivProfileAvatar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="@string/cd_icon_avatar"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_account_circle_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvGreetingTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@string/home_hello_guest"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/tvGreetingSubtitle"
                app:layout_constraintEnd_toStartOf="@id/ivProfileAvatar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/ivProfileAvatar"
                app:layout_constraintVertical_chainStyle="packed" />

            <TextView
                android:id="@+id/tvGreetingSubtitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="@string/home_subtitle_guest"
                android:textAppearance="?attr/textAppearanceCaption"
                android:textColor="@color/text_secondary"
                app:layout_constraintBottom_toBottomOf="@id/ivProfileAvatar"
                app:layout_constraintEnd_toStartOf="@id/ivProfileAvatar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvGreetingTitle" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/viewSearchBar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="24dp"
                app:cardBackgroundColor="#F0F4F3"
                app:cardCornerRadius="25dp"
                app:cardElevation="0dp"
                app:layout_constraintTop_toBottomOf="@id/tvGreetingSubtitle"
                app:strokeColor="#E0E0E0"
                app:strokeWidth="1dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawablePadding="12dp"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp"
                    android:text="@string/home_search_hint"
                    android:textColor="#9AA0A6"
                    android:textSize="14sp"
                    app:drawableStartCompat="@drawable/ic_search_24"
                    app:drawableTint="#9AA0A6" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardBanner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:cardBackgroundColor="@color/color_primary_base"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                app:layout_constraintTop_toBottomOf="@id/viewSearchBar">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="24dp">

                    <TextView
                        android:id="@+id/tvBannerTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/banner_guest_title"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toStartOf="@+id/ivBannerIcon"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvBannerDesc"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp"
                        android:text="@string/banner_guest_desc"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textColor="#E0F2F1"
                        app:layout_constraintEnd_toStartOf="@+id/ivBannerIcon"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvBannerTitle" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnBannerAction"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:backgroundTint="@color/white"
                        android:text="@string/banner_guest_btn"
                        android:textColor="@color/color_primary_base"
                        android:textStyle="bold"
                        app:cornerRadius="12dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvBannerDesc" />

                    <ImageView
                        android:id="@+id/ivBannerIcon"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:contentDescription="@string/cd_banner_icon"
                        android:src="@drawable/ic_recipe_lock_24"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="#80FFFFFF" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/tvSectionCat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="@string/section_categories"
                android:textAppearance="?attr/textAppearanceSubtitle1"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardBanner" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnCatCalm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                app:cardBackgroundColor="@color/surface_card_background"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:layout_constraintEnd_toStartOf="@id/btnCatEnergy"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvSectionCat">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="8dp"
                    android:gravity="center"
                    android:padding="16dp"
                    android:text="@string/cat_calm"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    app:drawableTint="@color/card_sleep"
                    app:drawableTopCompat="@drawable/ic_bedtime_stars_24" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnCatEnergy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                app:cardBackgroundColor="@color/surface_card_background"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:layout_constraintEnd_toStartOf="@id/btnCatDetox"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toEndOf="@id/btnCatCalm"
                app:layout_constraintTop_toBottomOf="@id/tvSectionCat">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="8dp"
                    android:gravity="center"
                    android:padding="16dp"
                    android:text="@string/cat_energy"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    app:drawableTint="@color/card_energy"
                    app:drawableTopCompat="@drawable/ic_rocket_launch_24" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnCatDetox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                app:cardBackgroundColor="@color/surface_card_background"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:layout_constraintEnd_toStartOf="@id/btnCatMore"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toEndOf="@id/btnCatEnergy"
                app:layout_constraintTop_toBottomOf="@id/tvSectionCat">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="8dp"
                    android:gravity="center"
                    android:padding="16dp"
                    android:text="@string/cat_detox"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    app:drawableTint="@color/card_weight"
                    app:drawableTopCompat="@drawable/ic_monitor_weight_24" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnCatMore"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="#E0F2F1"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toEndOf="@id/btnCatDetox"
                app:layout_constraintTop_toBottomOf="@id/tvSectionCat">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="8dp"
                    android:gravity="center"
                    android:padding="16dp"
                    android:text="@string/cat_more"
                    android:textColor="@color/color_primary_dark"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:drawableTint="@color/color_primary_dark"
                    app:drawableTopCompat="@drawable/ic_arrow_right_24" />

            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <ViewStub
        android:id="@+id/homeSkeletonStub"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:inflatedId="@+id/homeSkeleton"
        android:layout="@layout/view_home_skeleton"
        android:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>