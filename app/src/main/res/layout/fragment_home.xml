<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    tools:context=".ui.home.HomeFragment">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/homeContentScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:fillViewport="true"
        android:paddingBottom="16dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/home_paddingHorizontal"
            android:paddingVertical="24dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardAvatarContainer"
                android:layout_width="@dimen/home_cardAvatarContainer_size"
                android:layout_height="@dimen/home_cardAvatarContainer_size"
                android:layout_marginTop="26dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="26dp"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:strokeColor="@android:color/transparent"
                app:strokeWidth="2dp">

                <ImageView
                    android:id="@+id/ivProfileAvatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/cd_icon_avatar"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_account_circle_24" />
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/tvGreetingTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@string/home_hello_guest"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/home_tvGreetingTitle_size"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/tvGreetingSubtitle"
                app:layout_constraintEnd_toStartOf="@id/cardAvatarContainer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/cardAvatarContainer"
                app:layout_constraintVertical_chainStyle="packed" />

            <TextView
                android:id="@+id/tvGreetingSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:drawablePadding="6dp"
                android:focusable="true"
                android:gravity="center_vertical"
                android:paddingVertical="4dp"
                android:paddingStart="0dp"
                android:paddingEnd="64dp"
                android:text="@string/home_subtitle_guest"
                android:textAppearance="?attr/textAppearanceCaption"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/home_tvGreetingSubtitle_size"
                app:drawableEndCompat="@drawable/ic_arrow_right_24"
                app:drawableTint="@color/text_secondary"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toBottomOf="@id/cardAvatarContainer"
                app:layout_constraintEnd_toStartOf="@id/cardAvatarContainer"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvGreetingTitle" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/viewSearchBar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/home_viewSearchBar_height"
                android:layout_marginTop="@dimen/home_cardAvatarContainer_marginTop"
                app:cardBackgroundColor="#F0F4F3"
                app:cardCornerRadius="25dp"
                app:cardElevation="0dp"
                app:layout_constraintTop_toBottomOf="@id/tvGreetingSubtitle"
                app:strokeColor="#E0E0E0"
                app:strokeWidth="1dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawablePadding="12dp"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp"
                    android:text="@string/home_search_hint"
                    android:textColor="#9AA0A6"
                    android:textSize="@dimen/home_viewSearchBarText_size"
                    app:drawableStartCompat="@drawable/ic_search_24"
                    app:drawableTint="#9AA0A6" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardBanner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/home_cardBanner_marginTop"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                app:layout_constraintTop_toBottomOf="@id/viewSearchBar">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_home_banner_gradient"
                    android:paddingHorizontal="@dimen/home_cardBanner_paddingHorizontal"
                    android:paddingVertical="24dp">

                    <TextView
                        android:id="@+id/tvBannerTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/banner_guest_title"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        android:textColor="@color/white"
                        android:textSize="@dimen/home_tvBannerTitle_size"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toStartOf="@+id/ivBannerIcon"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvBannerDesc"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp"
                        android:text="@string/banner_guest_desc"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textColor="#E0F2F1"
                        android:textSize="@dimen/home_tvBannerDesc_size"
                        app:layout_constraintEnd_toStartOf="@+id/ivBannerIcon"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvBannerTitle" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnBannerAction"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:backgroundTint="@color/white"
                        android:text="@string/banner_guest_btn"
                        android:textColor="@color/color_primary_base"
                        android:textSize="@dimen/home_btnBannerActionText_size"
                        android:textStyle="bold"
                        app:cornerRadius="12dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvBannerDesc" />

                    <ImageView
                        android:id="@+id/ivBannerIcon"
                        android:layout_width="@dimen/home_ivBannerIcon_size"
                        android:layout_height="@dimen/home_ivBannerIcon_size"
                        android:contentDescription="@string/cd_banner_icon"
                        android:src="@drawable/ic_recipe_lock_24"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="#80FFFFFF" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/tvSectionCat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/home_tvSectionCat_marginTop"
                android:text="@string/section_categories"
                android:textAppearance="?attr/textAppearanceSubtitle1"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/home_tvSectionCat_size"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardBanner" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnCatCalm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="4dp"
                app:cardBackgroundColor="@color/surface_card_background"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:layout_constraintEnd_toStartOf="@id/btnCatEnergy"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvSectionCat">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingHorizontal="4dp"
                    android:paddingVertical="12dp"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:layout_width="@dimen/home_iconsCardsCategory_size"
                        android:layout_height="@dimen/home_iconsCardsCategory_size"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_bedtime_stars_24"
                        app:tint="@color/card_sleep" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="@string/cat_calm"
                        android:textAlignment="center"
                        android:textColor="@color/text_secondary"
                        android:textSize="@dimen/home_tvSectionCatTextCards_size" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnCatEnergy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="4dp"
                app:cardBackgroundColor="@color/surface_card_background"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:layout_constraintEnd_toStartOf="@id/btnCatDetox"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toEndOf="@id/btnCatCalm"
                app:layout_constraintTop_toBottomOf="@id/tvSectionCat">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingHorizontal="4dp"
                    android:paddingVertical="12dp"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:layout_width="@dimen/home_iconsCardsCategory_size"
                        android:layout_height="@dimen/home_iconsCardsCategory_size"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_rocket_launch_24"
                        app:tint="@color/card_energy" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="@string/cat_energy"
                        android:textAlignment="center"
                        android:textColor="@color/text_secondary"
                        android:textSize="@dimen/home_tvSectionCatTextCards_size" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnCatDetox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="4dp"
                app:cardBackgroundColor="@color/surface_card_background"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:layout_constraintEnd_toStartOf="@id/btnCatMore"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toEndOf="@id/btnCatEnergy"
                app:layout_constraintTop_toBottomOf="@id/tvSectionCat">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingHorizontal="4dp"
                    android:paddingVertical="12dp"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:layout_width="@dimen/home_iconsCardsCategory_size"
                        android:layout_height="@dimen/home_iconsCardsCategory_size"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_monitor_weight_24"
                        app:tint="@color/card_weight" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="@string/cat_detox"
                        android:textAlignment="center"
                        android:textColor="@color/text_secondary"
                        android:textSize="@dimen/home_tvSectionCatTextCards_size" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnCatMore"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="#E0F2F1"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toEndOf="@id/btnCatDetox"
                app:layout_constraintTop_toBottomOf="@id/tvSectionCat">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingHorizontal="4dp"
                    android:paddingVertical="12dp"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:layout_width="@dimen/home_iconsCardsCategory_size"
                        android:layout_height="@dimen/home_iconsCardsCategory_size"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_arrow_right_24"
                        app:tint="@color/color_primary_dark" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="@string/cat_more"
                        android:textAlignment="center"
                        android:textColor="@color/color_primary_dark"
                        android:textSize="@dimen/home_tvSectionCatTextCards_size"
                        android:textStyle="bold" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <ViewStub
        android:id="@+id/homeSkeletonStub"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:inflatedId="@+id/homeSkeleton"
        android:layout="@layout/view_home_skeleton"
        android:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>