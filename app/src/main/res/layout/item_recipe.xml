<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardRecipe"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="8dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@color/surface_card_background"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true"
    app:strokeColor="@color/colorSurface"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="80dp"
        android:padding="16dp">

        <!-- Título da receita -->
        <TextView
            android:id="@+id/textRecipeTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:textColor="@color/colorOnSurface"
            app:layout_constraintEnd_toStartOf="@id/imageRecipeLock"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Chá de Camomila Clássico" />

        <!-- Ícone de lock / lock_open -->
        <ImageView
            android:id="@+id/imageRecipeLock"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="8dp"
            android:contentDescription="@string/recipe_lock_closed_content_description"
            app:layout_constraintBottom_toBottomOf="@id/textRecipeTitle"
            app:layout_constraintEnd_toStartOf="@id/imageRecipeArrow"
            app:layout_constraintTop_toTopOf="@id/textRecipeTitle"
            app:srcCompat="@drawable/ic_recipe_lock_24"
            app:tint="@color/colorPrimary" />

        <!-- Ícone de "ir" / navegar -->
        <ImageView
            android:id="@+id/imageRecipeArrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="@string/recipes_item_icon_go_content_description"
            android:padding="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_arrow_right_24"
            app:tint="@color/colorPrimary" />

        <!-- Subtítulo -->
        <TextView
            android:id="@+id/textRecipeSubtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textAppearance="?attr/textAppearanceBody2"
            android:textColor="@color/colorOnSurface"
            app:layout_constraintEnd_toStartOf="@id/imageRecipeArrow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textRecipeTitle"
            tools:text="A Rainha da Tranquilidade" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
