<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/register_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    tools:context=".ui.auth.register.RegisterFragment">

    <!-- Toolbar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_primary_base">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbarRegister"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:menu="@menu/menu_register"
            app:title="@string/register_title"
            app:titleCentered="true"
            app:titleTextColor="@color/text_on_primary" />
    </com.google.android.material.appbar.AppBarLayout>

    <!-- AGORA O SCROLLVIEW FICA "LIGADO" AO APPBAR -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- resto do seu layout igual -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_register"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="16dp"
                android:backgroundTint="@color/surface_card_background"
                app:cardCornerRadius="24dp"
                app:cardElevation="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.5"
                app:layout_constraintWidth_max="420dp">

                <LinearLayout
                    android:id="@+id/container_register"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="32dp">

                    <!-- Título -->
                    <TextView
                        android:id="@+id/tvTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="24dp"
                        android:text="@string/register_subtitle"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                        android:textColor="@color/text_primary" />

                    <!-- Campo Nome -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilName"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="@string/register_name_hint"
                        app:boxBackgroundColor="@color/edittext_background"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxStrokeColor="@color/edittext_stroke"
                        app:endIconMode="clear_text"
                        app:endIconTint="@color/edittext_icon"
                        app:hintTextColor="@color/color_primary_base">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_register_name_24"
                            android:drawablePadding="12dp"
                            android:drawableTint="@color/edittext_icon"
                            android:inputType="textPersonName"
                            android:maxLines="1"
                            android:textColor="@color/edittext_text"
                            android:textSize="16sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Campo Email -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilEmail"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="@string/register_email_hint"
                        app:boxBackgroundColor="@color/edittext_background"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxStrokeColor="@color/edittext_stroke"
                        app:endIconMode="clear_text"
                        app:endIconTint="@color/edittext_icon"
                        app:hintTextColor="@color/color_primary_base">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_email_24"
                            android:drawablePadding="12dp"
                            android:drawableTint="@color/edittext_icon"
                            android:inputType="textEmailAddress"
                            android:maxLines="1"
                            android:textColor="@color/edittext_text"
                            android:textSize="16sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Campo Senha -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilPassword"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="@string/register_password_hint"
                        app:boxBackgroundColor="@color/edittext_background"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxStrokeColor="@color/edittext_stroke"
                        app:endIconMode="password_toggle"
                        app:endIconTint="@color/edittext_icon"
                        app:hintTextColor="@color/color_primary_base">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_password_24"
                            android:drawablePadding="12dp"
                            android:drawableTint="@color/edittext_icon"
                            android:inputType="textPassword"
                            android:maxLines="1"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:textColor="@color/edittext_text"
                            android:textSize="16sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Campo Confirmar Senha -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilConfirmPassword"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="@string/register_confirm_password_hint"
                        app:boxBackgroundColor="@color/edittext_background"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxStrokeColor="@color/edittext_stroke"
                        app:endIconMode="password_toggle"
                        app:endIconTint="@color/edittext_icon"
                        app:hintTextColor="@color/color_primary_base">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etConfirmPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_password_24"
                            android:drawablePadding="12dp"
                            android:drawableTint="@color/edittext_icon"
                            android:inputType="textPassword"
                            android:maxLines="1"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:textColor="@color/edittext_text"
                            android:textSize="16sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Campo Telefone -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilPhone"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp"
                        android:hint="@string/register_phone_hint"
                        app:boxBackgroundColor="@color/edittext_background"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxStrokeColor="@color/edittext_stroke"
                        app:endIconMode="clear_text"
                        app:endIconTint="@color/edittext_icon"
                        app:hintTextColor="@color/color_primary_base">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etPhone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_register_phone_24"
                            android:drawablePadding="12dp"
                            android:drawableTint="@color/edittext_icon"
                            android:inputType="phone"
                            android:maxLines="1"
                            android:textColor="@color/edittext_text"
                            android:textSize="16sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Botão Registrar -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnRegister"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginBottom="12dp"
                        android:backgroundTint="@color/button_primary_background"
                        android:enabled="false"
                        android:text="@string/register_button_text"
                        android:textAllCaps="false"
                        android:textColor="@color/button_primary_text"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:cornerRadius="12dp" />

                    <!-- ProgressBar -->
                    <ProgressBar
                        android:id="@+id/progressRegister"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="4dp"
                        android:indeterminateTint="@color/color_primary_base"
                        android:visibility="gone"
                        tools:visibility="gone" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>