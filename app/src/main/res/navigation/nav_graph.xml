<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <!-- ======== Tela Home ======== -->
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.luizeduardobrandao.appreceitascha.ui.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">

        <argument
            android:name="userName"
            android:defaultValue="@null"
            app:argType="string"
            app:nullable="true" />

        <action
            android:id="@+id/action_homeFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>

    <!-- ======== Tela Categorias ======== -->
    <fragment
        android:id="@+id/categoriesFragment"
        android:name="com.luizeduardobrandao.appreceitascha.ui.categories.CategoriesFragment"
        android:label="fragment_categories"
        tools:layout="@layout/fragment_categories" />

    <!-- ======== Tela Favoritos ======== -->
    <fragment
        android:id="@+id/favoritesFragment"
        android:name="com.luizeduardobrandao.appreceitascha.ui.favorites.FavoritesFragment"
        android:label="fragment_favorites"
        tools:layout="@layout/fragment_favorites" />

    <!-- ======== Tela Planos ======== -->
    <fragment
        android:id="@+id/plansFragment"
        android:name="com.luizeduardobrandao.appreceitascha.ui.plans.PlansFragment"
        android:label="fragment_plans"
        tools:layout="@layout/fragment_plans" />

    <!-- ======== Tela Login ======== -->
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.luizeduardobrandao.appreceitascha.ui.auth.login.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login">

        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />

        <action
            android:id="@+id/action_loginFragment_to_resetPasswordFragment"
            app:destination="@id/resetPasswordFragment" />

        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>

    <!-- ======== Tela Cadastro ======== -->
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.luizeduardobrandao.appreceitascha.ui.auth.register.RegisterFragment"
        android:label="Cadastro"
        tools:layout="@layout/fragment_register">

        <action
            android:id="@+id/action_registerFragment_to_homeFragment"
            app:destination="@id/homeFragment" />

        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>

    <!-- ======== Tela Reset Password ======== -->
    <fragment
        android:id="@+id/resetPasswordFragment"
        android:name="com.luizeduardobrandao.appreceitascha.ui.auth.resetpassword.ResetPasswordFragment"
        android:label="Recuperar Senha"
        tools:layout="@layout/fragment_reset_password">

        <action
            android:id="@+id/action_resetPasswordFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>

</navigation>