<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <!-- ======== Tela Home ======== -->
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.luizeduardobrandao.appreceitascha.ui.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">

        <argument
            android:name="userName"
            android:defaultValue="@null"
            app:argType="string"
            app:nullable="true" />

        <action
            android:id="@+id/action_homeFragment_to_loginFragment"
            app:destination="@id/loginFragment" />

        <action
            android:id="@+id/action_homeFragment_to_recipeListFragment"
            app:destination="@id/recipeListFragment" />

        <action
            android:id="@+id/action_homeFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
    </fragment>

    <!-- ======== Tela Search ======== -->
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.luizeduardobrandao.appreceitascha.ui.search.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" >

        <action
            android:id="@+id/action_searchFragment_to_recipeDetailFragment"
            app:destination="@id/recipeDetailFragment" />
    </fragment>

    <!-- ======== Tela Categorias Chá ======== -->
    <fragment
        android:id="@+id/categoriesFragment"
        android:name="com.luizeduardobrandao.appreceitascha.ui.categories.CategoriesFragment"
        android:label="fragment_categories"
        tools:layout="@layout/fragment_categories">

        <action
            android:id="@+id/action_categoriesFragment_to_recipeListFragment"
            app:destination="@id/recipeListFragment" />
    </fragment>

    <!-- ======== Tela Lista de Receitas ======== -->
    <fragment
        android:id="@+id/recipeListFragment"
        android:name="com.luizeduardobrandao.appreceitascha.ui.recipes.RecipeListFragment"
        android:label="fragment_recipe_list"
        tools:layout="@layout/fragment_recipe_list">

        <argument
            android:name="categoryId"
            app:argType="string" />

        <argument
            android:name="categoryName"
            app:argType="string" />

        <action
            android:id="@+id/action_recipeListFragment_to_recipeDetailFragment"
            app:destination="@id/recipeDetailFragment" />
    </fragment>

    <!-- ======== Tela Detalhes da Receita Chá ======== -->
    <fragment
        android:id="@+id/recipeDetailFragment"
        android:name="com.luizeduardobrandao.appreceitascha.ui.recipes.RecipeDetailFragment"
        android:label="fragment_recipe_detail"
        tools:layout="@layout/fragment_recipe_detail">

        <argument
            android:name="recipeId"
            app:argType="string" />
    </fragment>

    <!-- ======== Tela Favoritos ======== -->
    <fragment
        android:id="@+id/favoritesFragment"
        android:name="com.luizeduardobrandao.appreceitascha.ui.favorites.FavoritesFragment"
        android:label="fragment_favorites"
        tools:layout="@layout/fragment_favorites">

        <action
            android:id="@+id/action_favoritesFragment_to_recipeDetailFragment"
            app:destination="@id/recipeDetailFragment">
            <argument
                android:name="recipeId"
                app:argType="string" />
        </action>
    </fragment>

    <!-- ======== Tela Planos ======== -->
    <fragment
        android:id="@+id/plansFragment"
        android:name="com.luizeduardobrandao.appreceitascha.ui.plans.PlansFragment"
        android:label="fragment_plans"
        tools:layout="@layout/fragment_plans" />

    <!-- ======== Tela Gerenciar Plano ======== -->
    <fragment
        android:id="@+id/managePlanFragment"
        android:name="com.luizeduardobrandao.appreceitascha.ui.plans.ManagePlanFragment"
        android:label="fragment_manage_plan"
        tools:layout="@layout/fragment_manage_plan" />

    <!-- ======== Tela Login ======== -->
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.luizeduardobrandao.appreceitascha.ui.auth.login.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login">

        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />

        <action
            android:id="@+id/action_loginFragment_to_resetPasswordFragment"
            app:destination="@id/resetPasswordFragment" />

        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="false" />
    </fragment>

    <!-- ======== Tela Cadastro ======== -->
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.luizeduardobrandao.appreceitascha.ui.auth.register.RegisterFragment"
        android:label="Cadastro"
        tools:layout="@layout/fragment_register">

        <!-- Novo argumento para modo edição de perfil -->
        <argument
            android:name="isEditMode"
            android:defaultValue="false"
            app:argType="boolean" />

        <action
            android:id="@+id/action_registerFragment_to_homeFragment"
            app:destination="@id/homeFragment" />

        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>

    <!-- ======== Tela Reset Password ======== -->
    <fragment
        android:id="@+id/resetPasswordFragment"
        android:name="com.luizeduardobrandao.appreceitascha.ui.auth.resetpassword.ResetPasswordFragment"
        android:label="Recuperar Senha"
        tools:layout="@layout/fragment_reset_password">

        <action
            android:id="@+id/action_resetPasswordFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>

</navigation>